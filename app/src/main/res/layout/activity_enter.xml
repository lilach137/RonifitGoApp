<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ronifitgo.Activities.Activity_enter">


    <ImageView
        android:id="@+id/enter_IMG_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/enter_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_marginTop="470dp"
        android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/enter_BTN_trainer"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/black"
            android:text="התחברות מתאמן"
            android:fontFamily="@font/font"
            android:textSize="22dp"
            android:textColor="@color/white"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enter_BTN_coach"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/font"
            android:text="התחברות מאמן"
            android:textColor="@color/white"
            android:textSize="22dp"
            app:cornerRadius="20dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            android:visibility="invisible"
            app:lottie_rawRes="@raw/loading_animation"
            app:lottie_speed="0.5"
            />

    </LinearLayout>

</RelativeLayout>