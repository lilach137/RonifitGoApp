<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ronifitgo.Activity_addMeasures"
    android:background="@drawable/back">


    <LinearLayout
        android:id="@+id/newWeight_AppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/newItem_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="שקילה שבועית"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newWeight_AppBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/newWeight_ItemPicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/icon" />

            <EditText
                android:id="@+id/newWeight_TIL_calender"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newWeight_ItemPicture"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="בחר תאריך"
                android:textColor="@color/green"
                android:textColorHint="@color/title"
                android:textSize="20dp">
            </EditText>

            <EditText
                android:id="@+id/newWeight_TIL_weight"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newWeight_TIL_calender"
                android:layout_centerHorizontal="true"
                android:hint="הכנס משקל"
                android:textColor="@color/green"
                android:textColorHint="@color/title"
                android:textSize="20dp">


            </EditText>
            <LinearLayout
                android:id="@+id/newWeight_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/newWeight_TIL_calender"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:elevation="8dp"
                    app:cardElevation="8dp"
                    android:layoutDirection="rtl"
                    android:layout_margin="10dp">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layoutDirection="rtl"
                            android:layout_marginRight="10dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/newWeight_TXT_muscleTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="אחוזי שריר:"
                                android:textSize="20sp" />


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/newWeight_EDT_muscleTitle"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_below="@+id/newMeasure_TIL_m5"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_gravity="center_horizontal"
                                android:hint="שריר"
                                app:boxCornerRadiusBottomEnd="20dp"
                                app:boxCornerRadiusBottomStart="20dp"
                                app:boxCornerRadiusTopEnd="20dp"
                                app:boxCornerRadiusTopStart="20dp"
                                android:textColorHint="@color/white"
                                app:boxBackgroundColor="@color/green"
                                app:boxStrokeColor="@color/white"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="@color/title">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/newWeight_LBL_muscleTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="30"
                                    android:imeOptions="actionDone"
                                    android:inputType="numberDecimal"
                                    android:outlineAmbientShadowColor="@color/title"
                                    android:shadowColor="@color/white"
                                    android:textColor="@color/white" />


                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/listWeight_IMG_pic"
                            android:layout_width="200dp"
                            android:layout_height="110dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:background="@color/green"
                            android:src="@drawable/vs" />

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layoutDirection="rtl"
                            android:layout_marginRight="10dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/newWeight_TXT_fatTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="אחוזי שומן: "
                                android:textSize="20sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/newWeight_EDT_fatTitle"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:layout_below="@+id/newMeasure_TIL_m5"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_gravity="center_horizontal"
                                android:hint="שומן"
                                app:boxCornerRadiusBottomEnd="20dp"
                                app:boxCornerRadiusBottomStart="20dp"
                                app:boxCornerRadiusTopEnd="20dp"
                                app:boxCornerRadiusTopStart="20dp"
                                android:textColorHint="@color/white"
                                app:boxBackgroundColor="@color/green"
                                app:boxStrokeColor="@color/white"
                                app:boxStrokeWidth="2dp"
                                app:hintTextColor="@color/title">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/newWeight_LBL_fatTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ems="30"
                                    android:imeOptions="actionDone"
                                    android:inputType="number|numberDecimal"
                                    android:outlineAmbientShadowColor="@color/title"
                                    android:shadowColor="@color/white"
                                    android:textColor="@color/white" />


                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/newWeight_BTN_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/green"
        android:text="שמור שינויים"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="30dp" />



</RelativeLayout>